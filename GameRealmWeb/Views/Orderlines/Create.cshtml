@model GameRealm.Domain.Model.Orderline

@{
    ViewData["Title"] = "Create";
}

<h1>Place Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Game Name</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" value="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="container">
                <input type="submit" value="Add to Cart" class="btn btn-primary" asp-controller="Orderlines" asp-action="Create" />
                <input type="submit" value="Place Order" class="btn btn-primary" asp-controller="Orders" asp-action="Index"  />
              
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
