@model GameRealmWeb.ViewModels.OrdersViewModel

@{
    ViewData["Title"] = "Place Order";
}

<h1>Place Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer Name</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Store Location</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label">Game Title</label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="container">
                <input type="submit" value="Add to Cart" class="btn btn-primary" asp-controller="Orders" asp-action="AddToCart" /> 
                <input type="submit" value="Place Order" class="btn btn-primary" asp-controller="Orders" asp-action="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

